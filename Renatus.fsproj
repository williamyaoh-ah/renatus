<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Renatus</AssemblyName>
    <AssemblyVersion>0.0.1.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="src/lib/Model.fs" />
    <Compile Include="src/lib/Functional.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FParsec" Version="1.0.3" />
  </ItemGroup>

  <PropertyGroup>
    <NoWarn>NU1701</NoWarn>  <!-- NuGet target framework warning -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Generating an interface file allows us to make sure -->
    <!-- visibilities are correct in our output. -->
    <GenerateInterfaceFile>Renatus.fsi</GenerateInterfaceFile>
  </PropertyGroup>

</Project>